<?xml version="1.0" encoding="UTF-8"?>
<web-app>

  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

  <jsp-config>
    <jsp-property-group>
      <description>JS Encoding</description>
      <display-name>JS Encoding</display-name>
      <url-pattern>*.js</url-pattern>
      <page-encoding>UTF-8</page-encoding>

<!--      <description>CSS Encoding</description>-->
<!--      <display-name>CSS Encoding</display-name>-->
<!--      <url-pattern>*.css</url-pattern>-->
<!--      <page-encoding>UTF-8</page-encoding>-->
    </jsp-property-group>
  </jsp-config>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext.xml</param-value>
  </context-param>
<!-- 配置编码过滤器 -->
  <filter>
    <filter-name>encodeFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>encodeFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
<!--  配置 spring mvc-->
  <servlet>
    <servlet-name>dispatcherServlet</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:spring-controller.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>dispatcherServlet</servlet-name>
    <!--    仅处理 .action 结尾的请求-->
    <url-pattern>*.action</url-pattern>

    <!--  处理所有的请求  -->
<!--    <url-pattern>/</url-pattern>-->
  </servlet-mapping>

<!--  配置监听器 -->
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

</web-app>
